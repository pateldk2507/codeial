<style>
    .myHeader li{
        list-style-type: none;
        display: inline;
    }
    .myHeader li a{
        text-decoration: none;
    }
    .myHeader{
        background-color: aquamarine;
        
    }
    body{
        margin: 0px;
    }
</style>
<header>

    <div class="myHeader">
        <ul>
                <% if(locals.user) { %>
                    
                   
                            <li style="font-size: large;">
                                <a href="/user/profile/<%=locals.user.id%>"> <%= locals.user.name%>   </a>
                            </li>

                            <li style="float: right; margin-right: 5px;">
                                <a href="/user/logout"> Logout </a>
                            </li>
                    

                <% } else{ %>

                    <li>
                        <a href="/user/user-signin"> Login   </a>
                    </li>
                    
                    <li>
                        <a href="/user/user-signup"> Create Account </a>
                    </li>


                 <% } %>   
        </ul>
    </div>



</header>